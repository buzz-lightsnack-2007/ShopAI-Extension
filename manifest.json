{
	"manifest_version": 3,
	"name": "__MSG_manifest_name__",
	"description": "__MSG_manifest_description__",
	"version": "0",

	"permissions": [ "tabs", "activeTab", "storage", "unlimitedStorage"],

	"action": {
	  "default_icon": "gui/icons/logo_no_tiny.png",
      "default_popup": "gui/popup.htm"
	},

	"background": {
		"service_worker": "scripts/shopAI.js", "type": "module"
	},

	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["scripts/watchman.js"]
		}
	],
	"web_accessible_resources": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"resources": ["scripts/*.js", "gui/scripts/*.js", "config/*.json"]
		}
	],

	"icons": {
		"1024": "gui/icons/logo.png",
		"512": "gui/icons/logo_tiny.png"
	},

	"options_page": "gui/popup.htm",

	"default_locale": "en"
}
