{
	"manifest_version": 3,
	"name": "__MSG_extension_name__",
	"description": "__MSG_extension_description__",
	"version": "0",

	"minimum_chrome_version": "114",
	"permissions": ["tabs", "storage", "unlimitedStorage", "contextMenus"],

	"action": {
		"default_icon": "media/icons/logo_no_tiny.png",
		"default_popup": "pages/popup.htm"
	},
	"side_panel": {
		"default_path": "pages/popup.htm"
	},

	"background": {
		"service_worker": "scripts/background/shopAI.js", "type": "module"
	},

	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["scripts/external/content.js"]
		}
	],
	"web_accessible_resources": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"resources": ["scripts/*.js", "scripts/external/*.js", "scripts/mapping/*.js", "scripts/utils/*.js", "config/*.json"]
		}
	],

	"icons": {
		"1024": "media/icons/logo.png",
		"512": "media/icons/logo_tiny.png"
	},

	"options_page": "pages/settings.htm",

	"default_locale": "en"
}
